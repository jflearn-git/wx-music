/* pages/index/index.wxss */
page{
  overflow: hidden
}
.swiper-tab{  
    width: 100%;  
    border-bottom: 2rpx solid #777777;  
    text-align: center;  
    line-height: 80rpx;
    }  
.swiper-tab-list{ 
    font-size: 30rpx;  
    display: inline-block;  
    width: 33.33%;  
    color: #777777;  
    

}  
.on{ color: #374FAF;  
    border-bottom: 5rpx solid #374FAF;
}  
  
.swiper-box{ display: block;  width: 100%;
 /* overflow: hidden; */
  position: relative;


 }  
.swiper-box view{  
    text-align: center;  
}  

/* //轮播图开始 */
.box{
  width: 100%;
  position: relative;
  /* background: firebrick; */
  height: 340rpx
  
}
.slider{
  width: 100%;

  position: relative;
  /* background: darkblue */
}
.list{
      height: 3000rpx
}
/* //轮播图结束 */

/* 最新音乐开始 */
.newMusicTitle{
 height: 100rpx;
 display: flex;
 justify-content: left;
 align-content: center;
 line-height: 80rpx
}
.newMusicTitle text{
  border-left: 3rpx solid #374FAF;
  text-indent: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  height: 30rpx;
  margin-top:35rpx; 
 
}
.tracks{
  width: 100%;
  display: flex;
  height: 320rpx;

}
.tracks view{
  width: 33%;
   height: 246rpx;

}
.tracks view image{
  width: 100%;
  height: 100%;
  border-radius:5rpx; 
 
}
.tracks view text{
  font-size:30rpx 
}


/* 最新音乐结束 */



/* 精选专题开始 */
.story{
  border: 2rpx dashed #777777;
  margin:2%; 
  width: 96%;
  height: 160rpx;
  display: flex;

  /* 弹性布局两端对齐 */
  justify-content: space-between
}
.story>view{
  display: flex;
  width: 76%;
  height: 100%;
  
  align-items: left;
  flex-direction: column;
  text-indent: 20rpx;

}
.story .storyTitle{
  font-size:30rpx; 
  margin-top:20rpx; 

}
.storyTime{
  margin-top:20rpx; 

  font-size: 20rpx;
  color: #777777;
}
.story image{
  width: 160rpx;
  height: 160rpx;
}



/* 精选专题结束 */

.dd{
  display: flex;
  flex-direction: column;
  align-items: center
}
.nav{
  border: 1px solid #374FAF;
  padding: 20rpx;
  border-radius:5px; 
}














